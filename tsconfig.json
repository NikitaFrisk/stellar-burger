{
	"compilerOptions": {
		"target": "ES5",
		"module": "ESNext",
		"moduleResolution": "node",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"jsx": "react-jsx",
		"isolatedModules": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"allowJs": true,
		"plugins": [{ "name": "typescript-plugin-css-modules" }],
		"baseUrl": ".",
		"paths": {
			"@pages/*": ["./src/pages/*"],
			"@components/*": ["./src/components/*"],
			"@services/*": ["./src/services/*"],
			"@utils/*": ["./src/utils/*"],
			"@hooks/*": ["./src/hooks/*"]
		},
		"outDir": "./build/"
	},
	"include": ["src/**/*"],
	"exclude": ["**/*.test.*", "**/*.spec.*", "cypress/**/*", "test/**/*"]
}
